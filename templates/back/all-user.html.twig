{% extends 'back/base.html.twig' %}
{% block title %}Listes utilisateurs{% endblock %}
{% block body %}
    <div class="espace30"></div>
    <div class="container">
        <h1 class="h1 blue-text lighten-1 text center">Listes de tous les utilisateurs du bon point</h1>
        <div>
            Nombre total d'inscrit : {{ count }}
        </div>
        {% for row in pagination|batch(3) %}
            <div class="row">
                {% for user in row %}
                <div class="col s12 m12 l12 xl4">
                    <div class="card blue lighten-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{ user.username }}</span>
                            <p>
                                Nom : {{ user.lastName }}<br>
                                Prénom : {{ user.firstName }}<br>
                                numéro de téléphone : {{ user.numberTelephone }}
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="{{ path('back-user-detail', {'id': user.id}) }}" title="Voir l'utilisateur" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">add</i></a>
                        </div>
                    </div>
                </div>
               {% endfor %}
            </div>
        {% endfor %}
    </div>


    <div class="espace20"></div>
    <div class="navigation center">
        {{ knp_pagination_render(pagination, 'pagination/pagination-back.html.twig') }}
    </div>

{% endblock %}