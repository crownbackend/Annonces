<!DOCTYPE html>
<html lang="{{ app.request.locale}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="{{ asset('images/icon.png') }}" sizes="32x32">
    {% block stylesheets %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/materialize.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}">
    {% endblock %}
    <title>{% block title %}back{% endblock %}</title>
</head>
<body>
<nav>
    <div class="nav-wrapper blue lighten-1">

            <a href="{{ path('back-index') }}" class="brand-logo">Le bon point</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li><a href="{{ path('back-index') }}">Accueil</a></li>
                <li><a href="{{ path('back-advertisement') }}">Annonces</a></li>
                <li><a href="">Annonces non validé<span class="new badge">1</span></a></a></li>
                <li><a href="">Utilisateurs</a></li>
                <li><a href="">Demande clients<span class="new badge">1</span></a></li>
            </ul>
        </div>

</nav>

<ul class="sidenav" id="mobile-demo">
    <li><a href="{{ path('back-index') }}">Accueil</a></li>
    <li><a href="{{ path('back-advertisement') }}">Annonces</a></li>
    <li><a href="">Annonces non validé<span class="new badge">1</span></a></a></li>
    <li><a href="">Utilisateurs</a></li>
    <li><a href="">Demande clients<span class="new badge">1</span></a></li>
</ul>

<main>
{% block body %}{% endblock %}
</main>

<footer class="page-footer blue lighten-1">
    <div class="footer-copyright blue lighten-1">
        <div class="container">
            © {{ "now"|date("Y") }} Le bon point tout droits reservé
            <a class="grey-text text-lighten-4 right" href="#!">mentions légale</a>
        </div>
    </div>
</footer>
{% block javascripts %}
<script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
<script src="{{ asset('build/materialize.js') }}"></script>
<script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>