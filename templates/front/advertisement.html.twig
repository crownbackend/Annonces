{% extends 'base.html.twig' %}

{% block title %}{{ advertisement.title }} {% endblock %}

{% block body %}
<div class="espace20"></div>

<div class="container">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide col-md-8" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://picsum.photos/1000/700 slide" width="400" height="500" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://picsum.photos/1000/700 slide" width="400" height="500" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://picsum.photos/1000/700 slide" width="400" height="500" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://picsum.photos/1000/600 slide" width="400" height="500" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

            <div class="col-md-4">
                <div class="card text-center" style="width: 18rem;">
                    <div class="card-body">
                        <img src="https://picsum.photos/75/75" alt="..." class="rounded-circle">
                        <h5 class="card-title">{{ advertisement.user.lastName }}</h5>
                        <button type="button" class="btn btn-secondary btn-lg btn-block" id="message">Voir le numéro</button>
                        <button type="button" class="btn btn-info btn-lg btn-block" id="number">{{ advertisement.user.numberTelephone }}</button>
                        <button type="button" class="btn btn-primary btn-lg btn-block">Envoyer un message</button>
                    </div>
                </div>
            </div>

    </div>
<div class="espace20"></div>
        <div class="card col-md-8 card-bg">
            <div class="card-body">
                <h5 class="card-title">{{ advertisement.title }}</h5>
                <span class="price-r">{{ advertisement.price }} €</span>
                <div class="text-muted">{{ advertisement.createdAt|date('d/m/y à H:i') }}</div>
            </div>
        </div>

    <div class="espace30"></div>

    <div class="col-md-8">
        <hr class="hr">
        <div class="a-description">Description</div>
        <p class="p-description">
            {{ advertisement.description }}
        </p>
        <hr>
        <div class="a-localisation">Localisation</div>
        <p> {{ advertisement.address }}</p>
        <hr>
        <div class="container">
            <div class="row">
                <div class="a-reseau">
                    <a href="#" class="a-imprimer" OnClick="window.print()">
