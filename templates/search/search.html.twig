{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="card text-center">
    <div class="card-header">
        <div class="card-body">
            <h5 class="card-title">{{ 'Effectuer une recherche'|trans }}</h5>
            <div class="container">
                    {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-5">
                    {{ form_widget(form.name1) }}
                    </div>
                    <div class="col-md-4">
                    {{ form_widget(form.name3) }}
                    </div>
                    <div class="col-md-3">
                    {{ form_widget(form.name2) }}
                    {{ form_widget(form.name4) }}
                    </div>
                </div>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>